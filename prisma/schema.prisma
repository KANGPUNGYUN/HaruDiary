// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String
  name     String
  password String?
  auth     String    
  diarys   Diary[]
  likes    Like[]
  report   Report[]
}

model Diary {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  isPublic   Boolean
  createdAt  DateTime  @default(now())
  views      Int       @default(0)
  author     User      @relation(fields: [authorId], references: [id])
  authorId   Int
  likes      Like[]
  report     Report[]
}

model Like {
  diary     Diary   @relation(fields: [diaryId], references: [id])
  diaryId   Int
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int

  @@id([diaryId, authorId])
}

model Report {
  diary     Diary   @relation(fields: [diaryId], references: [id])
  diaryId   Int
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
  reportBy  String?

  @@id([diaryId, authorId])
}